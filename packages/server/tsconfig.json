{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@*": ["src/*"],
      "@infra/*": ["src/infra/*"],
      "@repositories/*": ["src/repositories/*"],
      "@use-cases/*": ["src/use-cases/*"]
    }
  }
}
